<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="pl.dualjack.testownik.QuizActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="10dp" android:background="#033182" android:id="@+id/quizTop">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treść pytania blah blah"
                android:id="@+id/textView5" android:layout_gravity="center_horizontal" android:textColor="#ffffff"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView2" android:layout_below="@+id/quizTop"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_above="@+id/relativeLayout">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/quizAnswers"
                android:layout_below="@+id/quizTop" android:layout_alignLeft="@+id/scrollView2"
                android:layout_alignStart="@+id/scrollView2">
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/scrollView2" android:layout_alignStart="@+id/scrollView2"
            android:layout_alignRight="@+id/scrollView2" android:layout_alignEnd="@+id/scrollView2"
            android:layout_alignParentBottom="true" android:background="#1b1b1b" android:id="@+id/relativeLayout"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="5/25"
                android:id="@+id/progress_count" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
                android:gravity="center_vertical" android:textColor="#ffffff"
                android:paddingLeft="5dp" android:textStyle="bold" android:textSize="18dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/ic_forward_white_36dp" android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" android:layout_centerVertical="true" android:clickable="true"
                android:cropToPadding="false"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView2"
                   android:src="@drawable/ic_low_priority_white_36dp"
                   android:clickable="true"
                   android:cropToPadding="false"
                   android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/imageView"
                   android:layout_toStartOf="@+id/imageView" android:layout_marginRight="10dp"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView3"
                   android:src="@drawable/ic_clear_white_36dp" android:clickable="true"
                   android:cropToPadding="false"
                   android:layout_centerVertical="true" android:layout_toLeftOf="@+id/imageView2"
                   android:layout_toStartOf="@+id/imageView2" android:layout_marginRight="10dp"/>
    </RelativeLayout>
</RelativeLayout>
