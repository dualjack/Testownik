<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="10dp"
                android:clickable="true" android:longClickable="false"
                android:background="@drawable/abc_list_selector_holo_light">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nazwa zestawu"
            android:id="@+id/lib_item_title"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Opis zestawu"
            android:id="@+id/lib_item_desc"
            android:layout_below="@+id/lib_item_title" android:layout_alignLeft="@+id/lib_item_title"
            android:layout_alignStart="@+id/lib_item_title" android:textSize="11dp"/>
</RelativeLayout>
